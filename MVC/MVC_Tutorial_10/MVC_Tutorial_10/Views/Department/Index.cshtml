@using MVC_Tutorial_10.Models;

@model IEnumerable<Department>

@{
    ViewBag.Title = "Department List";
}


<div class="container">
    <h2>Index</h2>
    <div class="row">
        <div class="col-xs-3">
            <table class="table table-striped table-bordered table-hover table-responsive">
                <thead>
                    <tr class="success">
                        <td>Department Name</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Department department in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(department.DepartmentName, "P_Name", "Person", new { departmentID = department.DeptID }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
