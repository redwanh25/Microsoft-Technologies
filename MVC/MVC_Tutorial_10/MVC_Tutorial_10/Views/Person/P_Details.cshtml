@model MVC_Tutorial_10.Models.Person

@{
    ViewBag.Title = "P_Details";
}

<body>
    <div class="container">
        <h2>P_Details</h2>
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                        <tr class="success">
                            <td>PersonID</td>
                            <td>Name</td>
                            <td>Gender</td>
                            <td>DepartmentID</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.PersonID</td>
                            <td>@Model.Name</td>
                            <td>@Model.Gender</td>
                            <td>@Model.DepartmentID</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <b> @Html.ActionLink("Back To P_Name", "P_Name", new { departmentID = Model.DepartmentID }) </b>
</div>
</body>