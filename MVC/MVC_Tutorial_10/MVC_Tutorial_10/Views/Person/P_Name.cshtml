@using MVC_Tutorial_10.Models

@model IEnumerable<Person>

@{
    ViewBag.Title = "P_Name";
}

<div class="container">
    <h2>P_Name</h2>
    <div class="row">
        <div class="col-xs-3">
            <table class="table table-striped table-bordered table-hover table-responsive">
                <thead>
                    <tr class="success">
                        <td>Person Name</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Person person in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(person.Name, "P_Details", new { id = person.PersonID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <b> @Html.ActionLink("Back To Department Name", "Index", "Department") </b>
    
</div>
