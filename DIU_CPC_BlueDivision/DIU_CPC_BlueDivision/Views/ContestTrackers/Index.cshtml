@model IEnumerable<DIU_CPC_BlueDivision.Models.ContestTracker>

@{
    ViewBag.Title = "Index";
}

<style>
    .inner {
        overflow: hidden;
    }

        .inner img {
            transition: all 1.0s ease;
        }

        .inner:hover img {
            transform: scale(1.3);
        }
</style>
<br /><br />
<div class="container">
    <div align="center">
        <p style="font-size:30px; color:orange; font-family:Impact">ContestTracker Create</p>
        <hr style="border: 4px solid; color: #F5F3F1">
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right">
                <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "ContestTrackers")'"><span class="glyphicon glyphicon-edit"></span> Create New</button>
            </div>
        </div>
    </div>
    <br /><br />

    @foreach (var item in Model)
    {
        <div class="col-xs-9 col-sm-6 col-md-4 col-lg-3 countClass">
            <div class="thumbnail shadow_B">
                <div class="inner" align="center">
                    <img src="~/Image/no-image.jpg" alt="This person did not post with an image" style="border-radius: 10px; height:150px; width:350px" class="img-responsive" />       @*height:100px; width:150px*@
                </div>
                <br />
                <div class="caption text-center">
                    <span style="color:red; font-size:17px">Name: </span> <span style="font-size:17px">@Html.DisplayFor(modelItem => item.ContestYear) </span><br />
                    <span style="color:red; font-size:17px">Date: </span><span style="font-size:17px"> @Html.DisplayFor(modelItem => item.Date) </span><br />
                    <span style="color:red; font-size:17px">Created By: </span><span style="font-size:17px"> @Html.DisplayFor(modelItem => item.CreatedBy) </span><br />
                    <br />
                    @*<button class="btn btn-success btn-xs" type="button" onclick="location.href='@Url.Action("Edit", "BlueSheets", new { id = item.Id })'"><span class="glyphicon glyphicon-pencil"></span> Edit</button>*@
                    <button class="btn btn-default btn-xs" type="button" onclick="location.href='@Url.Action("Index", "ContestTables", new { cTrackerId = item.Id })'"> <span class="glyphicon glyphicon-pencil"> </span> Contests</button>
                    <button class="btn btn-default btn-xs" type="button" onclick="location.href='@Url.Action("Index", "ContestantsTables", new { cTrackerId = item.Id })'"> <span class="glyphicon glyphicon-pencil"> </span> Contestants</button>
                    <button style="margin-top:5px; margin-bottom:5px" class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "ContestSheetExcelFormatView", new { cTrackerId = item.Id })'"> <span class="glyphicon glyphicon-pencil"> </span> ExcelFormatView</button>
                    <button style="margin-top:5px; margin-bottom:5px" class="btn btn-success btn-xs" type="button" onclick="location.href='@Url.Action("Index", "ContestContestants", new { cTrackerId = item.Id })'"> <span class="glyphicon glyphicon-pencil"> </span> Edit</button>
                    <button class="btn btn-danger btn-xs" type="button" onclick="location.href='@Url.Action("Delete", "ContestTrackers", new { id = item.Id })'"> <span class="glyphicon glyphicon-trash"> </span> Delete ContestTracker</button>
                </div>
            </div>
        </div>

    }

</div>


