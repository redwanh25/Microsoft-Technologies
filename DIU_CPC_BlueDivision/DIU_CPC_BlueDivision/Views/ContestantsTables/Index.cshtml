@model IEnumerable<DIU_CPC_BlueDivision.Models.ContestantsTable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    string appPath = "";
    appPath = string.Format("{0}", Request.Url.AbsoluteUri);
    string[] arr = appPath.Split('=');
    int Id = 0;
    Id = Convert.ToInt32(arr[1]);

}
<p>
    <button class="btn btn-success btn-sm" type="button" onclick="location.href='@Url.Action("Create", "ContestantsTables", new { ContestTrackerId = Id })'"><span class="glyphicon glyphicon-edit"></span> Create New</button>
</p>
<div style="overflow-x:auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContestantsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CFHandle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CFHandleLink)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContestantsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CFHandle)
                </td>
                <td>
                    <a target="_blank" href="@item.CFHandleLink">@Html.DisplayFor(modelItem => item.CFHandleLink)</a>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>



