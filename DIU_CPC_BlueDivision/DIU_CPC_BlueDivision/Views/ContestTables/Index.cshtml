@model IEnumerable<DIU_CPC_BlueDivision.Models.ContestTable>

@{
    ViewBag.Title = "Index";
}

<br /><br />
<h2>Index</h2>

@{
    string appPath = "";
    appPath = string.Format("{0}", Request.Url.AbsoluteUri);
    string[] arr = appPath.Split('=');
    int Id = 0;
    Id = Convert.ToInt32(arr[1]);

}

<br />
@using (Html.BeginForm("InputFromExcelFile", "ContestTables", new { cTId = Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-xs-4 col-lg-2 col-md-2 pull-right">
        <input id="ExcelFileInputButton" type="submit" value="Import From Excel File" class="btn btn-warning btn-sm" />
    </div>
    <div class="col-xs-8 col-lg-4 col-md-5 pull-right">
        <input id="ExcelFileInput" type="file" name="excelFile" class="form-control" required />
    </div>
}

<br /><br /><br />

<p>
    <button class="btn btn-success btn-sm" type="button" onclick="location.href='@Url.Action("Create", "ContestTables", new { ContestTrackerId = Id })'"><span class="glyphicon glyphicon-edit"></span> Create New</button>
</p>
<br />

<div style="overflow-x:auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContestLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfProblems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participation)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContestName)
                </td>
                <td>
                    <a target="_blank" href="@item.ContestLink">@Html.DisplayFor(modelItem => item.ContestLink)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfProblems)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Participation)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

<script type="text/javascript">
    $('#ExcelFileInputButton').click(function () {
        var extension = $('#ExcelFileInput').val().split('.').pop().toLowerCase();
        if ($('#ExcelFileInput').val() != '') {
            if ($.inArray(extension, ['xls', 'xlsx', 'csv']) == -1) {
                //alert('Sorry, You can only upload an image.');
                swal("Sorry!", "You can only upload a Excel File!", "error");
                return false;
            }
        }
    });
</script>