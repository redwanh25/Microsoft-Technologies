
@{
    ViewBag.Title = "Index";
}
<script src="~/CSS_And_Script_File/AngularJS/Angular.js"></script>
<h2>Index</h2>

<div ng-app="myModule">
    <div ng-controller="myController">
        <table>
            <tr>
                <td>ID</td>
                <td>Name</td>
            </tr>
            <tr ng-repeat="list in Columns">
                <td>{{list.ID}}</td>
                <td>{{list.Name}}</td>
            </tr>
        </table>
    </div>
</div>

<script type="text/javascript">
    var app = angular.module("myModule", []).controller("myController", function ($scope, $http) {
        $scope.Columns = [
            { ID: 1, No: 123, NameMistake: 'Redwan' },
            { ID: 2, Name: 'Tresha', No: 1234 },
            { ID: 3, Name: 'Enan', No: 12345 }
        ];
        $http({
            method: 'POST',
            url: '/Extra/Create',
            data: '{ text: "Hello world", list:' + JSON.stringify($scope.Columns) + '}'
        }).then(function success(response) {
            alert("Success");
        }, function error(response) {
            alert("Error");
        })
    });
</script>

