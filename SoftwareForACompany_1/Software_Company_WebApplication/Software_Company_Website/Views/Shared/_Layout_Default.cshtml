<script>
    $(document).ready(function () {
        var scrollTop = 0;
        $(window).scroll(function () {
            scrollTop = $(window).scrollTop();

            if (scrollTop >= 100) {
                $('#imgnav').attr("width", "60");
                $('.navbar').css("min-height", "");
                $('#navbutt').removeAttr("style");
                $('#navdiv').removeAttr("style");
            
                $('#imgnav').removeClass("bounceInLeft");
                $('.navbar').css("transition", "all .3s ease");
                $('#navbutt').css("transition", "all .3s ease");
                $('#navdiv').css("transition", "all .3s ease");


            } else if (scrollTop < 100) {
                $('#imgnav').removeAttr("width");
                $('.navbar').css("min-height", "88px");
                $('#navbutt').css("margin-top", "45px");
                $('#navdiv').css("padding-top", "20px");

                $('#imgnav').addClass("bounceInLeft");
                $('.navbar').css("transition", "all .3s ease");
                $('#navbutt').css("transition", "all .3s ease");
                $('#navdiv').css("transition", "all .3s ease");
            }

        });
    });
</script>

