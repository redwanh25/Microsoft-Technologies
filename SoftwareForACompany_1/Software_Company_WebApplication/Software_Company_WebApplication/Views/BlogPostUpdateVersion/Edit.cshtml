@model Software_Company_WebApplication.Models.Blog_tbl

@{
    /**/

    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "BlogPostUpdateVersion", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <h4>Blog_tbl</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="row" style="font-size:18px">
        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 col-sm-offset-1">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group has-success">
                        <label>@Html.DisplayNameFor(model => model.Title) </label>
                        @Html.TextAreaFor(model => model.Title, new { @rows = 3, @class = "form-control", @style = "font-size:16px" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-6">
                    <div class="form-group has-success">
                        <label>@Html.DisplayNameFor(model => model.BlogImage) </label>
                        <input type="file" id="image1" name="image1" class="form-control" />
                        @Html.ValidationMessageFor(model => model.BlogImage, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group has-success">
                        <label>@Html.DisplayNameFor(model => model.Text) </label>
                        @Html.TextAreaFor(model => model.Text, new { @rows = 10, @class = "form-control", @style = "font-size:16px" })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group has-success">
                        <input id="submitId" type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@using (Html.BeginForm("RemoveBlogPicture", "BlogPostUpdateVersion", new { id = Model.Id }))
{
    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 col-sm-offset-1">
        <div class="row">
            <label style="font-size:15px">Do you want to remove blog picture? </label>
            <br />
            <button class="btn btn-primary" type="submit" onclick="return confirm('are you sure you want to delete ID = @Model.Id?')"><span class="glyphicon glyphicon-folder-close" style="padding-right:10px"></span>Remove Blog Picture</button>
        </div>
    </div>

}

<div>

    @*@Html.ActionLink("Back to List", "Index")*@
    <a class="btn btn-info pull-right" href="@Url.Action("Index", "BlogPostUpdateVersion")">Back to List</a>
</div>

<script type="text/javascript">
    $('#submitId').click(function () {
        var extension = $('#image1').val().split('.').pop().toLowerCase();
        if ($('#image1').val() == '') {
            return true;
        }
        else if ($.inArray(extension, ['gif', 'png', 'jpg', 'jpeg', 'bmp']) == -1) {
            alert('Sorry, You can only upload an image.');
            //swal("Sorry!", "You can only upload an image!", "error");  // swal dile kaj kore na.
            return false;
        }
    });
</script>
