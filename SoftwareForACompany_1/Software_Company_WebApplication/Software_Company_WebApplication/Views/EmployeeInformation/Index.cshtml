                        <div class="form-group has-success">
                            <label>@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                            <input readonly id="Text1" class="form-control" type="text" value="@Html.DisplayFor(modelItem => item.PhoneNumber)" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group has-success">
                                <label>@Html.DisplayNameFor(model => model.Gender)</label>
