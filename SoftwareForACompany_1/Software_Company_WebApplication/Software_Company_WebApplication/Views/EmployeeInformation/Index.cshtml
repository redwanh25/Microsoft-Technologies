                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group has-success">
                                <label>@Html.DisplayNameFor(model => model.ZipCode)</label>
                                <input readonly id="Text2" class="form-control" type="text" value="@Html.DisplayFor(modelItem => item.ZipCode)" placeholder="Enter your ZipCode" />
                            </div>
