            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group has-success">
                        <label>@Html.DisplayNameFor(model => model.AboutYou)</label>
                        <textarea rows="3" readonly id="Text1" class="form-control" type="text" placeholder="Enter About You"> @Html.DisplayFor(modelItem => item.AboutYou) </textarea>
